---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title} | Honeyz Adventures</title>
    </head>
    <body>
        <nav class="tabs">
            <a href="/">Home</a>
            <a href="/collections/lighthouses">Lighthouses</a>
            <a href="/collections/darden-restaurants">Darden Restaurants</a>
        </nav>
        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    .tabs {
        display: flex;
        gap: 1rem;
        padding: 1rem;
        background: #f5f5f5;
    }
    
    .tabs a {
        text-decoration: none;
        color: #333;
        padding: 0.5rem 1rem;
        border-radius: 4px;
    }
    
    .tabs a:hover {
        background: #e0e0e0;
    }
</style> 