---
import '../styles/global.css';
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <!-- Standard favicon -->
        <link rel="icon" type="image/x-icon" href="/favicon.ico" sizes="any" />
        <!-- For Safari -->
        <link rel="mask-icon" href="/favicon.ico" color="#000000" />
        <!-- For modern browsers -->
        <link rel="shortcut icon" href="/favicon.ico" />
        <!-- Force favicon refresh -->
        <link rel="icon" href="/favicon.ico?v=2" />
        <title>{title} | Honeyz Adventures</title>
    </head>
    <body>
        <nav class="flex gap-4 p-4 bg-gray-100">
            <a href="/" class="text-gray-800 px-4 py-2 rounded-md hover:bg-gray-200">Home</a>
            <a href="/collections/lighthouses" class="text-gray-800 px-4 py-2 rounded-md hover:bg-gray-200">Lighthouses</a>
            <a href="/collections/darden-restaurants" class="text-gray-800 px-4 py-2 rounded-md hover:bg-gray-200">Darden Restaurants</a>
        </nav>
        <main>
            <slot />
        </main>
    </body>
</html> 