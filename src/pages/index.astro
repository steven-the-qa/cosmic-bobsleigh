---
import MainLayout from '../layouts/MainLayout.astro';
import { collections } from '../data/collections';
import type { Collection } from '../types';

// Helper function to get a random image from a collection's experiences
function getRandomImage(collection: Collection) {
    const validImages = collection.experiences.filter(exp => exp.imageUrl);
    if (validImages.length === 0) return null;
    const randomIndex = Math.floor(Math.random() * validImages.length);
    return validImages[randomIndex].imageUrl;
}
---

<MainLayout title="Home">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-4xl font-bold text-center mb-12 text-gray-100">Honeyz Adventures</h1>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {collections.map(collection => {
                const randomImage = getRandomImage(collection);
                return (
                    <a href={`/collections/${collection.id}`} 
                       class="group block overflow-hidden rounded-2xl bg-gray-900 border border-gray-800 transition-all duration-300 hover:border-gray-600 hover:shadow-xl hover:-translate-y-1">
                        <div class="relative" style="padding-top: 125%;">
                            {randomImage ? (
                                <img 
                                    src={randomImage} 
                                    alt={`Preview of ${collection.title}`}
                                    class="absolute inset-0 w-full h-full object-cover bg-[#1B4D3E]"
                                />
                            ) : (
                                <div class="absolute inset-0 flex items-center justify-center bg-[#1B4D3E] text-gray-300">
                                    <span class="text-sm">No image available</span>
                                </div>
                            )}
                        </div>
                        <div class="p-6">
                            <h2 class="text-2xl font-semibold mb-3 text-gray-100 group-hover:text-blue-400 transition-colors">
                                {collection.title}
                            </h2>
                            <p class="text-gray-400 text-sm line-clamp-2">
                                {collection.description}
                            </p>
                        </div>
                    </a>
                );
            })}
        </div>
    </div>
</MainLayout>
